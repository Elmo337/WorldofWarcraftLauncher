{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true
      },
      "window": {
        "minimize": true,
        "close": true
      },
      "all": false,
      "shell": {
        "all": true
      },
      "fs": {
        "scope": ["$DOWNLOAD", "$HOME", "$DESKTOP"]
      }
    },
    "windows": [
      {
        "title": "World of Warcraft 1.14.2 Launcher",
        "width": 800,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": false,
        "visible": true,
        "center": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "focus": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.launcher.app",
      "icon": [
        "icons/icon.ico"
      ]
    }
  }
}
